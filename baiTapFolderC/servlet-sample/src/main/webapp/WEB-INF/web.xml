<web-app
  version="3.0"
  xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
>

  <display-name>Archetype Created Web Application</display-name>
  <servlet-mapping>
    <servlet-name>hello-servlet</servlet-name>
    <url-pattern>/hello2</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>html-page</servlet-name>
    <servlet-class>edu.java.web.HmlPageServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>html-page</servlet-name>
    <url-pattern>/page</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>edu.java.web.SimpleServletListener</listener-class>
  </listener>
  <login-config>
    <auth-method>FORM</auth-method>
    <realm-name>Test Realm</realm-name>
    <form-login-config>
      <form-login-page>/j_security_check</form-login-page>
      <form-error-page>/j_security_check?error=true</form-error-page>
    </form-login-config>
  </login-config>

